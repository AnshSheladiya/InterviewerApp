{
    "openapi": "3.0.1",
    "info": {
      "title": " API | Development",
      "description": "The API for integration for Shift Admin and Shift App",
      "version": "1.0"
    },
    "servers": [
      {
        "description": "Local Server",
        "url": "http://localhost:8383"
      }
    ],
    "paths": {
      "/api/auth/signup": {
        "post": {
          "tags": [
            "Auth"
          ],
          "summary": "User Signup",
          "description": "Register a new user",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SignupRequestDTO"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Verification email was successfully sent.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "statusCode": {
                        "type": "number",
                        "example": 200
                      },
                      "message": {
                        "type": "string",
                        "example": "Verification email was successfully sent."
                      },
                      "success": {
                        "type": "boolean",
                        "example": true
                      },
                      "data": {
                        "$ref": "#/components/schemas/SignupResponseDTO"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/api/auth/login": {
        "post": {
          "tags": [
            "Auth"
          ],
          "summary": "User signup",
          "description": "Endpoint for user registration",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginRequestDTO"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successfully logged in.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "statusCode": {
                        "type": "number",
                        "example": 200
                      },
                      "message": {
                        "type": "string",
                        "example": "Successfully logged in."
                      },
                      "success": {
                        "type": "boolean",
                        "example": true
                      },
                      "data": {
                        "$ref": "#/components/schemas/AuthResponseDTO"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized."
            }
          }
        }
      },
      "/api/auth/logout": {
        "post": {
          "tags": [
            "Auth"
          ],
          "summary": "User logout",
          "description": "Endpoint for user logout",
          "responses": {
            "200": {
              "description": "Successfully logged out.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "statusCode": {
                        "type": "number",
                        "example": 200
                      },
                      "message": {
                        "type": "string",
                        "example": "Successfully logged out."
                      },
                      "success": {
                        "type": "boolean",
                        "example": true
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "statusCode": {
                        "type": "number",
                        "example": 401
                      },
                      "message": {
                        "type": "string",
                        "example": "Unauthorized."
                      },
                      "success": {
                        "type": "boolean",
                        "example": false
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/api/products": {
        "get": {
          "tags": [
            "Products"
          ],
          "summary": "Get All Products",
          "description": "Get All Products",
          "responses": {
            "200": {
              "description": "Successfully found.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "statusCode": {
                        "type": "number",
                        "example": 200
                      },
                      "message": {
                        "type": "string",
                        "example": "Successfully found."
                      },
                      "success": {
                        "type": "boolean",
                        "example": true
                      },
                      "data": {
                        "type": "array",
                        "items": {
                        "$ref": "#/components/schemas/ProductResponseDTO"
                    }
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "statusCode": {
                        "type": "number",
                        "example": 401
                      },
                      "message": {
                        "type": "string",
                        "example": "Unauthorized."
                      },
                      "success": {
                        "type": "boolean",
                        "example": false
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
